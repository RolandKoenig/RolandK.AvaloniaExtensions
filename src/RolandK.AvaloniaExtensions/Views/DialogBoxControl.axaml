<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="RolandK.AvaloniaExtensions.Views.DialogBoxControl">
    <Border BorderThickness="1"
            BorderBrush="{DynamicResource DialogBoxControlBorderBrush}">
        <DockPanel LastChildFill="True">
            <Border DockPanel.Dock="Top"
                    Background="{DynamicResource DialogBoxControlHeaderBackgroundBrush}">
                <TextBlock x:Name="TxtHeader" 
                         HorizontalAlignment="Center" 
                         Margin="20,5,20,5" />
            </Border>
            
            <Border Background="{DynamicResource DialogBoxControlBackgroundBrush}">
                <Grid x:Name="GridContent"
                      Margin="3" /> 
            </Border>
        </DockPanel>
    </Border>
</UserControl>
